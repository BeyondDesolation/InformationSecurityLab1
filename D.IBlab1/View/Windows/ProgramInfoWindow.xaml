<Window x:Class="D.IBlab1.View.Windows.ProgramInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D.IBlab1.View.Windows"
        xmlns:vm="clr-namespace:D.IBlab1.ViewModels.WindowsViewModels"
        mc:Ignorable="d" FontSize="14"
        Title="ProgramInfoWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:ProgramInfoWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ScrollViewer Margin="4">
            <StackPanel>
                <TextBlock Text="Информация о программе" HorizontalAlignment="Center" FontSize="24" Margin="8"/>
                <TextBlock Text="{Binding AuthorInfo}" Margin="4" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding ProgramDescription}" Margin="4" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
