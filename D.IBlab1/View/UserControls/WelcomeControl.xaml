<UserControl x:Class="D.IBlab1.View.UserControls.WelcomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:D.IBlab1.View.UserControls"
             xmlns:vm="clr-namespace:D.IBlab1.ViewModels.UserControlsViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <d:UserControl.DataContext>
        <vm:WelcomeControlViewModel/>
    </d:UserControl.DataContext>
    <Grid>
        <TextBlock Text="{Binding Path=WelcomeText}"/> 
    </Grid>
</UserControl>
